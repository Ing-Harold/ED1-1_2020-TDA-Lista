			listaP = new ListaPtr();
		} break;
	case 2: {
			int e;
			cout << "Elemento a insertar : ";
			cin >> e;
			listaP->inserta_inicio(e);
		} break;
	case 3: {
			int e;
			cout << "Elemento a insertar : ";
